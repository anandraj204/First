@{
    ViewBag.Title = "Jane - Roles Manager";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-xs-12">
        <h2>Roles Manager</h2>
    </div>
</div>
<div class="wrapper wrapper-content" ng-controller="RolesManagerCtrl">
    <div class="ibox" ng-hide="loading">
        <div class="ibox-content">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Full name</th>
                        <th>Email</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="patient in people">
                        <td>{{ patient.firstName }} {{ patient.lastName }}</td>
                        <td>{{ patient.email }}</td>
                        <td style="max-width:380px;">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div isteven-multi-select
                                         input-model="patient.roles"
                                         output-model="patient.rolesList"
                                         button-label="icon name"
                                         item-label="icon name maker"
                                         tick-property="ticked"
                                         on-item-click="save(patient)"
                                         on-select-none="save(patient)"
                                         on-reset="save(patient)"
                                         on-clear="save(patient)"
                                         on-select-all="save(patient)">
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div ng-show="loading" class="loader">
        <img src="/Content/images/loader.gif">
    </div>
</div>

