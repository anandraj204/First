@{
    ViewBag.Title = "Jane - Connecting patients with highest quality medical marijuana.";
}

@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/smartpanel")
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/bundles/cssbundle")
@Styles.Render("~/bundles/smartadmincss")


@Scripts.Render("~/bundles/angular")

@RenderSection("TopOfHeadBase", false)
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>@ViewBag.Title</title>
<link rel="shortcut icon" href="~/Content/images/favicon.ico" />

<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;">
<script>
    (function (app) {
        app.constant('ApiAddress', '@Html.Raw(ViewBag.ApiAddress)');
    })(angular.module('AskMJaneAngularApp'));
</script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link href='https://fonts.googleapis.com/css?family=Raleway:300,400,500,600|Roboto:400,100,500' rel='stylesheet' type='text/css'>
<body ng-app="AskMJaneAngularApp" ng-controller="MainCtrl">
    <div id="wrapper">
        @Html.Partial("_LeftPanel")
        <div id="page-wrapper" class="gray-bg">
            <div class="row border-bottom">
                <nav class="navbar-static-top" role="navigation">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i></a>
                    </div>
                    <div class="pull-left" id="mainNavbar">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/menu">Menu</a>
                            </li>
                            <li>
                                <a href="/contact">Contact Us</a>
                            </li>
                            @if (Request.IsAuthenticated)
                            {
                                <li>
                                    <a href="/myaccount">My account</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Connecting patients with highest quality medical marijuana.</span>
                        </li>
                        @if (!Request.IsAuthenticated)
                        {
                            <li>
                                <a href="/login">Sign In</a>
                            </li>
                            <li>
                                <a href="/register">Sign Up</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a ng-click="Logout()" href=""><i class="fa fa-sign-out"></i> Log Out</a>
                            </li>
                        }
                    </ul>

                </nav>
            </div>

            @RenderBody()
        </div>
    </div>
    

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places"></script>


</body>
