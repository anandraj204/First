@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}


<div class="container-fluid"  ng-controller="PendingDispensaryCtrl">
    <div ng-hide="!hideInfo" style="width: 50%">
        <form name="updateform" class="form form-horizontal" ng-submit="login(form, form.$valid)" novalidate>
            <div class="panel panel-default">
                <div class="panel-heading">Dispensary login</div>
                <div class="panel-body">
                    <div class="col-md-offset-2 col-md-10">
                        <alert ng-repeat="alert in alerts" type="danger">{{alert.msg}}</alert>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="email">Email</label>
                        <div class="col-sm-9">
                            <input type="text" ng-model="username" class="form-control" placeholder="Email" id="email" name="email" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="password">Password</label>
                        <div class="col-sm-9">
                            <input type="password" ng-model="password" class="form-control" placeholder="Passwword" id="password" name="password" />
                        </div>
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <input type="submit" class="btn btn-default " value="Log in" />
                </div>
            </div>
        </form>
    </div>

    <div ng-hide="hideInfo">
        <alert class="alert-info">Your data is not approved yet, you can change what you want here.</alert>
        @{ Html.RenderPartial("_DispensaryInfo");}
    </div>

</div>

