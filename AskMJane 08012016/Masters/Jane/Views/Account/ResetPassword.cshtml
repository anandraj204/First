@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
}


<div class="container" ng-controller="MyAccountCtrl">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <form name="updateform" class="form form-horizontal">
                <div class="panel panel-default">
                    <div class="panel-heading">Reset Your Password</div>
                    <div class="panel-body">
                        <div style="padding-left: 5px; padding-right: 5px;">
                            <div class="form-group">
                                <alert ng-repeat="alert in alerts" type="danger">{{alert.msg}}</alert>
                                <label>Your E-mail</label>
                                <input type="text" placeholder="Your email" class="form-control" id="txtEamil" ng-model="forgetEmail"/>
                            </div>
                            <div class="form-group">
                                <label>Current Password</label>
                                <input type="password" placeholder="Sent password" class="form-control" id="textSentPassword" ng-model="oldPassword"/>
                            </div>
                            <div class="form-group">
                                <label>New Password</label>
                                <input type="password" placeholder="New password" class="form-control" id="txtPassword" ng-model="newPassword"/>
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="password" placeholder="Confirm password" class="form-control" id="txtConfirmPassword" ng-model="confirmPassword"/>
                            </div>
                            <div class="form-group">
                                <input type="submit" style="margin-top: 5px;" class="btn btn-success" ng-click="resetUserPassword()" value="Reset password">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
